@model IEnumerable<PFSign.Data.SignIn>

@{
    ViewData["Title"] = "签到详情";
}

<h2>签到详情</h2>
@if (ViewBag.Date == null)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">签到</a>
    </p>
}
else
{
    <h4>@ViewBag.Date.ToLongDateString()</h4>
}
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Seat)
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-name="@item.Name"><strong class="text-info">@item.Name</strong></a>
            </td>
            <td>
                @item.Time.ToLocalTime()
            </td>
            <td>
                @item.Seat
            </td>
        </tr>
}
    </tbody>
</table>
